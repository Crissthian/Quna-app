<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Quna</title>
</head>
<link rel="stylesheet" href="/css/style.css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
      crossorigin="anonymous" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<link href="https://api.mapbox.com/mapbox-gl-js/v3.14.0/mapbox-gl.css" rel="stylesheet" />
<link rel="stylesheet" href="/css/footer.css" />
<script src="https://api.mapbox.com/mapbox-gl-js/v3.14.0/mapbox-gl.js"></script>
<script>
  const mapToken = "<%= process.env.MAP_TOKEN%>";
  const coordinates = <%= JSON.stringify(listing.geometry.coordinates) %>;
  const listingDataforMap = {
    title: "<%= listing.title %>",
    location: "<%= listing.location %>",
    country: "<%= listing.country %>"
  };
</script>
<link rel="stylesheet" href="/css/showlisting.css" />

<body>
  <%- include("../includes/navbar.ejs") %>

    <div class="container mt-5 mb-5" style="max-width: 1000px">
      <%- include("../includes/flash.ejs") %>

        <div class="listing-header">
          <h1 class="listing-title">
            <%= listing.title %>
          </h1>
          <div class="action-buttons d-flex justify-content-start gap-3 flex-wrap">
            <a href="/listings" class="btn btn-outline-secondary d-flex align-items-center gap-2">
              <i class="fa-solid fa-arrow-left"></i> Volver a Listados
            </a>

            <% if (currentUser && listing.owner._id.equals(currentUser._id)) { %>
              <a href="/listings/<%= listing._id %>/edit"
                 class="btn btn-outline-primary d-flex align-items-center gap-2">
                <i class="fa-solid fa-pen-to-square"></i>Editar
              </a>

              <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                <button type="submit" class="btn btn-outline-danger d-flex align-items-center gap-2">
                  <i class="fa-solid fa-trash"></i> Eliminar
                </button>
              </form>
              <% } %>
          </div>
        </div>
        <div class="listing-image-container">
          <img src="<%= listing.image.url %>" alt="Listing Image" class="listing-image" />
        </div>
        <div class="details-card">
          <div class="detail-item">
            <i class="fa-solid fa-user detail-icon"></i>
            <span class="detail-label">Propietario:</span>
            <span class="detail-value">
              <% if (listing.owner) { %>
                <a href="#" class="owner-link">
                  <%= listing.owner.username %>
                </a>
                <% } else { %>
                  <span class="text-muted">Desconocido</span>
                  <% } %>
            </span>
          </div>

          <div class="detail-item">
            <i class="fa-solid fa-align-left detail-icon"></i>
            <span class="detail-label">Descripción:</span>
            <span class="detail-value">
              <%= listing.description %>
            </span>
          </div>

          <div class="detail-item">
            <i class="fa-solid fa-money-bill-wave detail-icon"></i>
            <span class="detail-label">Precio:</span>
            <span class="detail-value price-highlight">
              <%= listing.price ? listing.price.toLocaleString("es-PE", { style: "currency" , currency: "PEN" })
                  : 'No Disponible' %>
            </span>
          </div>

          <div class="detail-item">
            <i class="fa-solid fa-location-dot detail-icon"></i>
            <span class="detail-label">Ubicación:</span>
            <span class="detail-value">
              <%= listing.location %>
            </span>
          </div>

          <div class="detail-item">
            <i class="fa-solid fa-flag detail-icon"></i>
            <span class="detail-label">País:</span>
            <span class="detail-value">
              <%= listing.country %>
            </span>
          </div>
          <div class="detail-item">
            <i class="fa-solid fa-layer-group detail-icon"></i>
            <span class="detail-label">Categoría:</span>
            <span class="detail-value text-capitalize">
              <%= listing.category %>
            </span>
          </div>
          <div class="detail-item">
            <i class="fa-solid fa-hashtag detail-icon"></i>
            <span class="detail-label">ID de Listado:</span>
            <span class="detail-value"><code><%= listing.id %></code></span>
          </div>
        </div>

        <hr class="section-divider" />
        <div>
          <h5>Ubicación de <%= listing.title %>:</h5>
          <br />
          <div id="map"></div>
        </div>
        <hr class="section-divider" />
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <div class="review-section card">
              <div class="card-body p-4">
                <div class="review-header">
                  <h4 class="mb-0 fw-bold">
                    <i class="fa-solid fa-star me-2"></i>
                    Deja una reseña
                  </h4>
                </div>

                <% if (currentUser) { %>
                  <form action="/listings/<%= listing._id %>/reviews" method="POST" class="review-form needs-validation"
                        novalidate>
                    <div class="mb-4">
                      <label class="form-label fw-semibold mb-3">Puntuación:</label>
                      <div class="star-rating" style="color: #ccc; cursor: pointer">
                        <i class="fa-solid fa-star" data-value="1"></i>
                        <i class="fa-solid fa-star" data-value="2"></i>
                        <i class="fa-solid fa-star" data-value="3"></i>
                        <i class="fa-solid fa-star" data-value="4"></i>
                        <i class="fa-solid fa-star" data-value="5"></i>
                      </div>
                      <input type="hidden" name="review[rating]" id="ratingValue" value="1" required />
                      <div class="invalid-feedback">Por favor selecciona una puntuación.</div>
                    </div>

                    <div class="mb-4">
                      <label for="comment" class="form-label fw-semibold">Comentarios:</label>
                      <textarea id="comment" name="review[comment]" rows="4" class="form-control"
                                placeholder="Comparte tu experiencia con este anuncio..." required></textarea>
                      <div class="invalid-feedback">
                        Por favor ingresa tu comentario sobre la reseña.
                      </div>
                    </div>

                    <div class="text-center">
                      <button type="submit" class="submit-btn text-white">
                        <i class="fa-solid fa-paper-plane me-2"></i> Enviar Reseña
                      </button>
                    </div>
                  </form>

                  <% } else { %>
                    <div class="text-center p-4">
                      <i class="fa-solid fa-lock mb-3" style="font-size: 2rem; color: var(--text-muted)"></i>
                      <p class="text-muted mb-3">
                        Por favor <strong>inicia sesión</strong> para dejar una reseña.
                      </p>
                      <a href="/login" class="btn text-white" style="
                    background: var(--gradient-primary);
                    border: none;
                    border-radius: 25px;
                    padding: 0.6rem 2rem;
                  ">
                        <i class="fa-solid fa-sign-in-alt me-2"></i>Login
                      </a>
                    </div>
                    <% } %>
              </div>
            </div>
          </div>
        </div>

        <hr class="section-divider" />
        <h4 class="all-reviews-header">Todas las Reseñas</h4>

        <% if (listing.reviews.length===0) { %>
          <div class="no-reviews">
            <i class="fa-regular fa-comments mb-3" style="font-size: 3rem; color: var(--text-muted)"></i>
            <p>No hay reseñas todavía. ¡Sé el primero en dejar una!</p>
          </div>
          <% } else { %>
            <div class="reviews-grid">
              <% listing.reviews.forEach(review=> { %>
                <div class="review-card">
                  <div class="reviewer-name">
                    <% if (review.author && review.author.username) { %>
                      <a href="/users/<%= review.author._id %>">
                        <i class="fa-solid fa-user-circle me-2"></i>
                        <%= review.author.username %>
                      </a>
                      <% } else { %>
                        <span class="text-muted">
                          <i class="fa-solid fa-user-secret me-2"></i>
                          <em>Anonymous</em>
                        </span>
                        <% } %>
                  </div>

                  <div class="review-rating">
                    <% for (let i=1; i <=5; i++) { %>
                      <i class="<%= i <= review.rating ? 'fa-solid fa-star' : 'fa-regular fa-star' %>"
                         style="color: #166534; font-size: 1.1rem"></i>
                      <% } %>
                  </div>

                  <p class="review-comment">
                    <%= review.comment %>
                  </p>

                  <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                    <button type="submit" class="delete-review-btn" title="Delete Review">
                      <i class="fa-solid fa-trash"></i>
                    </button>
                  </form>
                </div>
                <% }) %>
            </div>
            <% } %>
    </div>

    <script>
      const stars = document.querySelectorAll(".star-rating .fa-star");
      const ratingInput = document.getElementById("ratingValue");

      stars.forEach((star) => {
        star.addEventListener("click", function () {
          const rating = this.getAttribute("data-value");
          ratingInput.value = rating;

          stars.forEach((s) => {
            s.style.color =
              s.getAttribute("data-value") <= rating ? "#166534" : "#ccc";
          });
        });

        star.addEventListener("mouseenter", function () {
          const rating = this.getAttribute("data-value");
          stars.forEach((s) => {
            s.style.color =
              s.getAttribute("data-value") <= rating ? "#166534" : "#ccc";
          });
        });
      });

      document
        .querySelector(".star-rating")
        .addEventListener("mouseleave", function () {
          const currentRating = ratingInput.value;
          stars.forEach((s) => {
            s.style.color =
              s.getAttribute("data-value") <= currentRating
                ? "#166534"
                : "#ccc";
          });
        });

      document.addEventListener("DOMContentLoaded", function () {
        const defaultValue = ratingInput.value || "1";
        stars.forEach((s) => {
          s.style.color =
            s.getAttribute("data-value") <= defaultValue ? "#166534" : "#ccc";
        });
      });
    </script>
    <script>
      () => {
        "use strict";

        const forms = document.querySelectorAll(".needs-validation");

        Array.from(forms).forEach((form) => {
          form.addEventListener(
            "submit",
            (event) => {
              if (!form.checkValidity()) {
                event.preventDefault();
                event.stopPropagation();
              }

              form.classList.add("was-validated");
            },
            false
          );
        });
      };
    </script>

    <%- include("../includes/footer.ejs") %>
      <script src="/js/map.js"></script>
      <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
              crossorigin="anonymous"></script>
      <script src="/js/script.js"></script>
</body>

</html>