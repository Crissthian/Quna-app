<% layout("/layouts/boilerplate") %>
  <div class="form-container">
    <h1>Iniciar Sesión</h1>

    <form action="/login" method="POST" class="needs-validation" novalidate>
      <div class="form-group">
        <label for="email">Correo Electrónico</label>
        <input type="email" id="email" name="username" required placeholder="Introduce tu correo electrónico"
               class="form-control">
      </div>

      <div class="form-group">
        <label for="password">Contraseña</label>
        <input type="password" id="password" name="password" required placeholder="Introduce tu contraseña"
               class="form-control">
      </div>

      <button type="submit">Iniciar Sesión</button>
    </form>

    <p class="signup-link">¿No tienes una cuenta? <a href="/signup">Regístrate aquí</a></p>
  </div>